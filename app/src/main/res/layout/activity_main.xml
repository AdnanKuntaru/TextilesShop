<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.textilesshop.MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text1"
    android:textSize="30sp"
    android:text="Ustaz Investment"
    android:textColor="@color/colorPrimary"
    android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/image"
        android:layout_below="@id/text1"
        android:scaleType="fitXY"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/textile"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: No 25 Muda Lawal Market Bauchi State, Niegeria."
        android:id="@+id/text2"
        android:textSize="25sp"
        android:paddingLeft="16dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textColor="#3498db"
        android:layout_below="@id/image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: majktr@gmail.com"
        android:id="@+id/text3"
        android:paddingBottom="4dp"
        android:textColor="#3498db"
        android:paddingLeft="16dp"
        android:layout_below="@id/text2"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gsm: +2348026444200"
        android:paddingLeft="16dp"
        android:textColor="#3498db"
        android:layout_below="@id/text3"
        android:textSize="25sp"/>
</RelativeLayout>
